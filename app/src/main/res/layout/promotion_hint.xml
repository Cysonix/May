<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<RelativeLayout 
	    android:layout_width="fill_parent"
		android:layout_height="40dip" 
		android:layout_alignParentBottom="true"
		android:background="#60000000" 
		android:orientation="horizontal"
		android:gravity="center_vertical">
		<LinearLayout 
		    android:id="@+id/promotion_index_layout"
			android:layout_marginLeft="10dip" 
			android:layout_alignParentRight="true"
			android:layout_width="wrap_content"
			android:layout_height="match_parent" 
			android:orientation="horizontal"
			android:gravity="right|center_vertical" 
			android:layout_marginRight="5dip" 
			/>
		<TextView 
		    android:id="@+id/promotion_tip"
			android:layout_width="match_parent" 
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical" 
			android:layout_alignParentLeft="true"
			android:layout_toLeftOf="@id/promotion_index_layout"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="10dp"
			android:layout_centerVertical="true"
			android:singleLine="true" 
			android:text="" 
			android:textColor="@color/home_gallary_text_color"
			android:textSize="16sp"/>
		
	</RelativeLayout>
	<LinearLayout
		android:id="@+id/main_linearlayout_gallery_navigation"
		android:layout_width="match_parent"
		android:layout_height="6dip"
		android:orientation="horizontal"
		android:layout_alignParentBottom="true">
		    <View
		        android:id="@+id/main_view_gallery_navigation1"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:layout_width="match_parent"
		        android:background="#6C6C6C"/>
		    <View
		        android:id="@+id/main_view_gallery_navigation2"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:layout_width="match_parent"
		        android:background="#8E8E8E"/>
		    <View
		        android:id="@+id/main_view_gallery_navigation3"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:layout_width="match_parent"
		        android:background="#ADADAD"/>
		    <View
		        android:id="@+id/main_view_gallery_navigation4"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:layout_width="match_parent"
		        android:background="#d0d0d0"/>
		    <View
		        android:id="@+id/main_view_gallery_navigation5"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:layout_width="match_parent"
		        android:background="#F0F0F0"/>   
		</LinearLayout>
</RelativeLayout>