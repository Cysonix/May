<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" 
	android:layout_height="match_parent"
	android:background="#FCFCFC" 
	android:orientation="horizontal">
	<RelativeLayout 
	    android:id="@+id/relativeLayoutImage"
		android:layout_width="wrap_content" 
		android:layout_height="77dip"
		android:padding="5dip">
		<ImageView 
		    android:id="@+id/imageViewBackground"
		    android:layout_width="72dip"
		    android:layout_height="72dip"
		    android:layout_centerInParent="true"
		    android:scaleType="centerCrop"
		    android:src="@drawable/main_newslist_image_bg"
		    />
		<ImageView 
		    android:id="@+id/imageViewTitle"
			android:layout_height="60dip" 
			android:layout_width="60dip"
			android:layout_centerInParent="true"
			android:scaleType="centerCrop" />
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/relativelayoutItem"
		android:layout_width="match_parent" 
		android:layout_height="76dp"
		android:paddingTop="2dip" 
		android:paddingLeft="2dip">
		<TextView android:text=""
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"
			android:textColor="#009393" 
			android:id="@+id/textViewTitle" 
			android:singleLine="true"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:ellipsize="end" 
			android:maxLines="1" 
			android:layout_marginRight="5dip"
			android:textSize="15dp"/>
		<RelativeLayout 
		    android:id="@+id/relativeLayoutItem"
			android:layout_below="@id/textViewTitle" 
			android:layout_width="match_parent"
			android:layout_height="match_parent" 
			android:layout_marginRight="5dp">
			<TextView 
			    android:layout_height="wrap_content"
				android:textColor="#272727" 
				android:textSize="13dp" 
				android:text="summary"
				android:layout_width="wrap_content" 
				android:id="@+id/textViewContent"
				android:paddingBottom="1dip"
				android:ellipsize="end"
				android:maxLines="2" 
				android:layout_alignParentLeft="true"/>
			<TextView 
			    android:layout_height="wrap_content" 
			    android:text="2013-08-14 09:09:12"
				android:layout_width="wrap_content" 
				android:id="@+id/textViewTime"
				android:layout_alignParentRight="true"  
				android:paddingBottom="2dip"
				android:textColor="#A31211" 
				android:textSize="12dp"
				android:layout_below="@id/textViewContent"
				android:layout_marginRight="3dip"
				/>
			
		</RelativeLayout>
	</RelativeLayout>
</LinearLayout>